<div id="criteria_filter">
  <% form_tag options[:action], :method => options[:method], :class => options[:class] do -%>  	
  	<ul id="criteria_filter_items">
		<%= render :partial => "acts_as_criteria/filter_row_empty", :locals => { :columns => columns } %>		
	</ul>
  	<div id="criteria_filter_actions">
		<%= submit_tag options[:label] %>
		<%= link_to_remote "Clear", :url => { :action => :criteria, :id => "clear" } %>
	</div>
  	<%= link_to_remote "Simple", :url => { :action => :criteria, :id => "simple" } %>
  <% end -%>
</div>