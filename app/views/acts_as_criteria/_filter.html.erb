<div id="criteria_filter" <%= acts_as_criteria_set_visibility(:filter, @current_query, options) %>>
  <% form_tag options[:action], :method => options[:method], :class => options[:class] do -%>  	
  	<ul id="criteria_filter_items">
	  <%- unless acts_as_criteria_is_filter_active(@current_query) %>	
		<%= render :partial => "acts_as_criteria/filter_row_empty", :locals => { :columns => columns } %>
	  <%- else %>
	    <%= render :partial => "acts_as_criteria/filter_row_prepopulated", :locals => { :model => model } %>
	  <%- end %>		
	</ul>
  	<div id="criteria_filter_actions">
		<%= submit_tag options[:label] %>

		<%- unless options[:clear].blank? %>
		  <%= acts_as_criteria_get_action_link("clear", options[:clear]) %>	  
		<%- end %>
				
		<%- unless options[:simple].blank? %>
		  <%= acts_as_criteria_get_action_link("simple", options[:simple]) %>	  
		<%- end %>		
	</div>
  <% end -%>
</div>