<div id="criteria_filter" <%= "style='display:none;'" if options[:hidden] %>>
  <% form_tag options[:action], :method => options[:method], :class => options[:class] do -%>  	
  	<ul id="criteria_filter_items">
		<%= render :partial => "acts_as_criteria/filter_row_empty", :locals => { :columns => columns } %>		
	</ul>
  	<div id="criteria_filter_actions">
		<%= submit_tag options[:label] %>

		<%- unless options[:clear].blank? %>
		  <%- unless options[:clear][:text].blank? %>
			<%= link_to_remote options[:clear][:text], :url => { :action => :criteria, :id => "clear" } %>
		  <%- end %>
		  <%- unless options[:clear][:image].blank? %>
			<%= link_to_remote image_tag(options[:clear][:image]), :url => { :action => :criteria, :id => "clear" } %>
		  <%- end %>	  
		<%- end %>
				
		<%- unless options[:simple].blank? %>
		  <%- unless options[:simple][:text].blank? %>
			<%= link_to_remote options[:simple][:text], :url => { :action => :criteria, :id => "simple" } %>
		  <%- end %>
		  <%- unless options[:simple][:image].blank? %>
			<%= link_to_remote image_tag(options[:simple][:image]), :url => { :action => :criteria, :id => "simple" } %>
		  <%- end %>	  
		<%- end %>		
	</div>
  <% end -%>
</div>